{% extends 'base.html.twig' %}

{% block title %}Bolonews
{% endblock %}
{% block headerNav %}
	<li>
		<a href="{{path('app_app')}}">Home</a>

	</li>
	<li>
		<a href="{{path('app_articles')}}">Articles</a>
	</li>
	<li>
		<a href="#">Contact</a>
	</li>
{% endblock %}
{% block header %}
	{% if is_granted("ROLE_ADMIN") %}
		<a class="flex item-center gap5px category" href="{{path('app_admin')}}">Mon espace
			<img src="{{asset('images/blog/user.png')}}" alt=""></a>
		<a href="{{path('app_logout')}}">Me deconnecter</a>
	{% elseif is_granted("ROLE_USER") %}
		<a class="flex item-center gap5px category" href="{{path('app_app')}}">Mon espace
			<img src="{{asset('images/blog/user.png')}}" alt="">
			<a href="{{path('app_logout')}}">Me deconnecter</a>
		{% else %}
			<a href="{{path('app_login')}}">Se connecter</a>
			<a href="{{path('app_register')}}">M'inscrire</a>
		{% endif %}
	{% endblock %}
	{% block adminMenu %}
		<div class="admin-menu large-2">
			<nav>
				<ul class="flex direction-column space-evenly gap16px">
					<li>
						<a href="{{path('app_admin')}}">
							<span>Mes articles</span>
						</a>
					</li>
					<li>
						<a href="{{path('admin_allArticle')}}">
							<span>Tous les articles</span>
						</a>
					</li>
					<li>
						<a href="{{path('admin_allUser')}}">
							<span>Users</span>
						</a>
					</li>
					<li>
						<a href="{{path('category_add')}}">
							<span class="color-yellow">Categories</span>
						</a>
					</li>
				</ul>
			</nav>
		</div>
	{% endblock %}

	{% block body %}
		<!-- A la Une  -->
		<main
			class="container-1200">
			<!-- AJOUTER UNE NOUVELLE CATEGORIE -->
			<h2 class="text-center">Ajouter une nouvelle categorie</h2>
			<section class="form-category large-12 margin-top5">
				<div class="flex direction-column item-center space-between gap16px">
					{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
					<div class='label-category large-12'>
						{{ form_row(form.label) }}
					</div>

					<div class="save large-12 flex content-center margin-top5">
						{{ form_row(form.Ajouter)}}
					</div>
					{{ form_end(form) }}
				</div>
			</section>
		</main>

	{% endblock %}
